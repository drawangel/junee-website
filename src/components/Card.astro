---
interface Props {
  icon?: string;
  title: string;
  description: string;
  class?: string;
}

const { icon, title, description, class: className = '' } = Astro.props;
---

<div class={`flex flex-col gap-4 p-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition-shadow ${className}`}>
  {icon && (
    <div class="flex size-12 items-center justify-center rounded-lg bg-primary/10">
      <span class="material-symbols-outlined text-2xl text-primary">
        {icon}
      </span>
    </div>
  )}
  <div class="flex flex-col gap-2">
    <h3 class="text-lg font-bold text-gray-900 dark:text-white">{title}</h3>
    <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
  </div>
  {Astro.slots.has('default') && (
    <div class="mt-2">
      <slot />
    </div>
  )}
</div>
