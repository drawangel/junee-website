---
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gray-100 dark:bg-gray-900">
  <div class="container mx-auto max-w-5xl px-4 py-16">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-4">
      <div class="flex flex-col gap-4">
        <div>
          <img src="/junee_logo_light.png" alt="Junee AI" class="h-18 w-auto dark:hidden" />
          <img src="/junee_logo_dark.png" alt="Junee AI" class="h-18 w-auto hidden dark:block" />
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">{t('footer.tagline')}</p>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-gray-900 dark:text-white">{t('footer.product')}</h3>
        <a class="text-sm text-gray-600 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors" href={`/${lang}/how-we-help`}>{t('footer.solution')}</a>
        <a class="text-sm text-gray-600 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors" href={`/${lang}/contact`}>{t('footer.demo')}</a>
        <a class="text-sm text-gray-600 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors" href={`/${lang}/products`}>{t('footer.products')}</a>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-gray-900 dark:text-white">{t('footer.company')}</h3>
        <a class="text-sm text-gray-600 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors" href={`/${lang}/about-us`}>{t('footer.about')}</a>
        <a class="text-sm text-gray-600 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors" href={`/${lang}/contact`}>{t('footer.contact')}</a>
      </div>
    </div>
    <div class="mt-12 border-t border-gray-200 dark:border-gray-800 pt-8 text-center text-sm text-gray-500 dark:text-gray-400">
      <p>{t('footer.rights')}</p>
    </div>
  </div>
</footer>
