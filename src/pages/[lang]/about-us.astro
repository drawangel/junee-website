---
import Layout from '../../layouts/Layout.astro';
import { useTranslations, getValidLang } from '../../i18n';

const { lang } = Astro.params;
const t = useTranslations(getValidLang(lang));
---

<Layout title={t('about.title')} description={t('about.description')}>
  <!-- Headline Section -->
  <section class="py-16 sm:py-24 px-4 text-center">
    <h1 class="text-gray-900 dark:text-white tracking-tight text-4xl sm:text-5xl font-bold leading-tight pb-4">
      {t('about.hero.title')}
    </h1>
    <div class="max-w-3xl mx-auto">
      <p class="text-gray-600 dark:text-gray-400 text-base sm:text-lg font-normal leading-relaxed">
        {t('about.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- Team Grid -->
  <section class="pb-16 sm:pb-24">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="flex flex-col gap-4 text-center items-center">
          <div class="px-4 w-full max-w-[200px]">
            <div class="w-full aspect-square rounded-full overflow-hidden bg-gray-200 dark:bg-gray-800">
              <img src="/Adam_junee.jpeg" alt={t('about.team.adam.name')} class="w-full h-full object-cover scale-150" style="object-position: center 10%;" />
            </div>
          </div>
          <div>
            <p class="text-gray-900 dark:text-white text-lg font-medium leading-normal">{t('about.team.adam.name')}</p>
            <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">{t('about.team.adam.role')}</p>
            <a class="text-primary hover:underline text-sm font-normal leading-normal inline-flex items-center gap-1 mt-1 group" href="https://www.linkedin.com/in/adam-benaim-22a43121/" target="_blank">
              <span>{t('about.team.linkedin')}</span>
              <span class="material-symbols-outlined text-base transition-transform group-hover:translate-x-0.5">arrow_forward</span>
            </a>
          </div>
        </div>
        <div class="flex flex-col gap-4 text-center items-center">
          <div class="px-4 w-full max-w-[200px]">
            <div class="w-full aspect-square rounded-full overflow-hidden bg-gray-200 dark:bg-gray-800">
              <img src="/Marcos_junee.jpg" alt={t('about.team.adam.name')} class="w-full h-full object-cover scale-150" style="object-position: center 0%;" />
            </div>
          </div>
          <div>
            <p class="text-gray-900 dark:text-white text-lg font-medium leading-normal">{t('about.team.marcos.name')}</p>
            <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">{t('about.team.marcos.role')}</p>
            <a class="text-primary hover:underline text-sm font-normal leading-normal inline-flex items-center gap-1 mt-1 group" href="https://www.linkedin.com/in/marcos-lopez-94b84735/" target="_blank">
              <span>{t('about.team.linkedin')}</span>
              <span class="material-symbols-outlined text-base transition-transform group-hover:translate-x-0.5">arrow_forward</span>
            </a>
          </div>
        </div>
        <div class="flex flex-col gap-4 text-center items-center">
          <div class="px-4 w-full max-w-[200px]">
            <div class="w-full aspect-square rounded-full overflow-hidden bg-gray-200 dark:bg-gray-800">
              <img src="/Cesar_junee.jpg" alt={t('about.team.adam.name')} class="w-full h-full object-cover scale-150" style="object-position: center 0%;" />
            </div>
          </div>
          <div>
            <p class="text-gray-900 dark:text-white text-lg font-medium leading-normal">{t('about.team.cesar.name')}</p>
            <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">{t('about.team.cesar.role')}</p>
            <a class="text-primary hover:underline text-sm font-normal leading-normal inline-flex items-center gap-1 mt-1 group" href="https://www.linkedin.com/in/c%C3%A9sar-mart%C3%ADnez-%C3%A1vila-b0a8a35a/" target="_blank">
              <span>{t('about.team.linkedin')}</span>
              <span class="material-symbols-outlined text-base transition-transform group-hover:translate-x-0.5">arrow_forward</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
