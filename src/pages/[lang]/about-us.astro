---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n';

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout title={t('about.title')} description={t('about.description')}>
  <!-- Headline Section -->
  <section class="py-16 sm:py-24 px-4 text-center">
    <h1 class="text-gray-900 dark:text-white tracking-tight text-4xl sm:text-5xl font-bold leading-tight pb-4">
      {t('about.hero.title')}
    </h1>
    <div class="max-w-3xl mx-auto">
      <p class="text-gray-600 dark:text-gray-400 text-base sm:text-lg font-normal leading-relaxed">
        {t('about.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- Team Grid -->
  <section class="pb-16 sm:pb-24">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="flex flex-col gap-4 text-center items-center">
          <div class="px-4 w-full max-w-[200px]">
            <div class="w-full aspect-square rounded-full overflow-hidden bg-gray-200 dark:bg-gray-800">
              <img src="/Adam_photo.jpeg" alt={t('about.team.adam.name')} class="w-full h-full object-cover scale-150" style="object-position: center 10%;" />
            </div>
          </div>
          <div>
            <p class="text-gray-900 dark:text-white text-lg font-medium leading-normal">{t('about.team.adam.name')}</p>
            <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">{t('about.team.adam.role')}</p>
            <a class="text-primary hover:underline text-sm font-normal leading-normal inline-flex items-center gap-1 mt-1 group" href="#">
              <span>{t('about.team.linkedin')}</span>
              <span class="material-symbols-outlined text-base transition-transform group-hover:translate-x-0.5">arrow_forward</span>
            </a>
          </div>
        </div>
        <div class="flex flex-col gap-4 text-center items-center">
          <div class="px-4 w-full max-w-[200px]">
            <div class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-full bg-gray-200 dark:bg-gray-800" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuD6SMPMKE1pJiW7UgOapFsywOQgQqmUkONndGYEtqUgdmMK2rYL_gsdonkUBUEKf4OsSHIhIxN1xLiWKT9eiXB84STPD36YTImllNjhhwD_mqCxaVTdMTc1iSCWyNsiWrYMJTwCj_vlXFhYgsYi9IYp1BfkAJ4WUd9exVxUC-uNejc6iFHJI1pcsbk0L8bR_Ai9BJkloF6HVV1TNF_gvpkDr1d5wsopp9wJwg2wEPvq7sIcoOKBt3_4EGbWq03gDjvjPCChia_GHRjN");'></div>
          </div>
          <div>
            <p class="text-gray-900 dark:text-white text-lg font-medium leading-normal">{t('about.team.marcos.name')}</p>
            <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">{t('about.team.marcos.role')}</p>
            <a class="text-primary hover:underline text-sm font-normal leading-normal inline-flex items-center gap-1 mt-1 group" href="#">
              <span>{t('about.team.linkedin')}</span>
              <span class="material-symbols-outlined text-base transition-transform group-hover:translate-x-0.5">arrow_forward</span>
            </a>
          </div>
        </div>
        <div class="flex flex-col gap-4 text-center items-center">
          <div class="px-4 w-full max-w-[200px]">
            <div class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-full bg-gray-200 dark:bg-gray-800" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuBkZYKr963NSl6zM6ksuJuXFqjxmEm5BPCkZ4xUSt_Bs6ly_b8kbsrK6VfBsxMmFrqFVYCiWLRdtjEIJWybrp98ii9WqiJ4eJHCMg6CVkzqY82m4Uh-PJnEG758lqzMywqoVEDYZR1qSyes0pBGibPRZCmYwYfI_fVQiKYOSmNkShSf1iTLaMrqja-g0FRa7MDh7YLKF_EJz1WcAqtGsb6Frxlha59RT0DmDI5k3Q7TX48A3z6W8maQCm6mKrED9bOcg-LuMGerpEpV");'></div>
          </div>
          <div>
            <p class="text-gray-900 dark:text-white text-lg font-medium leading-normal">{t('about.team.cesar.name')}</p>
            <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">{t('about.team.cesar.role')}</p>
            <a class="text-primary hover:underline text-sm font-normal leading-normal inline-flex items-center gap-1 mt-1 group" href="#">
              <span>{t('about.team.linkedin')}</span>
              <span class="material-symbols-outlined text-base transition-transform group-hover:translate-x-0.5">arrow_forward</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
