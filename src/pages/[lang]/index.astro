---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import { useTranslations } from '../../i18n';

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout title={t('home.title')}>
  <!-- HeroSection -->
  <section class="py-20 sm:py-28">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <div class="flex flex-col gap-8 text-center lg:text-left">
          <div class="flex flex-col gap-4">
            <h1 class="text-4xl font-black leading-tight tracking-tighter text-gray-900 dark:text-white md:text-5xl lg:text-6xl">
              {t('home.hero.title')}<br />{t('home.hero.titleLine2')}<br /><span class="whitespace-nowrap">{t('home.hero.titleHighlight')}</span>
            </h1>
            <h2 class="text-lg font-normal text-gray-600 dark:text-gray-300">
              {t('home.hero.subtitle')}
            </h2>
          </div>
          <div class="flex flex-wrap justify-center gap-4 lg:justify-start">
            <Button href={`/${lang}/contact`}>{t('home.hero.ctaPrimary')}</Button>
            <Button variant="secondary" href={`/${lang}/contact`}>{t('home.hero.ctaSecondary')}</Button>
          </div>
        </div>
        <div class="w-full aspect-video rounded-xl bg-gray-200 dark:bg-gray-800 flex items-center justify-center">
          <div class="w-full h-full bg-center bg-no-repeat bg-cover rounded-xl" style='background-image: url("/image_home.jpeg");'></div>
        </div>
      </div>
    </div>
  </section>

  <!-- SectionHeader -->
  <section class="py-12">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="relative overflow-hidden rounded-2xl backdrop-blur-xl bg-primary/20 dark:bg-primary/30 border border-primary/30 p-12 shadow-2xl">
        <div class="absolute inset-0 opacity-30">
          <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-primary rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute bottom-1/4 right-1/4 w-40 h-40 bg-purple-500 rounded-full blur-3xl animate-pulse delay-1000"></div>
        </div>
        <h2 class="relative text-center text-3xl sm:text-4xl md:text-5xl font-black tracking-tight text-gray-900 dark:text-white animate-[fadeInUp_0.8s_ease-out]">
          {t('home.sectionHeader.title')}
        </h2>
      </div>
    </div>
  </section>

  <!-- FeatureSection -->
  <section class="py-16 sm:py-20">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="flex flex-col items-center gap-12">
        <div class="flex max-w-3xl flex-col gap-4 text-center">
          <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
            {t('home.features.title')}
          </h1>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            {t('home.features.subtitle')}
          </p>
        </div>
        <div class="grid w-full grid-cols-1 gap-6 md:grid-cols-3">
          <div class="flex flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 text-center">
            <div class="mx-auto flex size-12 items-center justify-center rounded-lg bg-primary/20 text-primary">
              <span class="material-symbols-outlined text-3xl">sell</span>
            </div>
            <div class="flex flex-col gap-2">
              <h2 class="text-lg font-bold text-gray-900 dark:text-white">{t('home.features.taxonomy.title')}</h2>
              <p class="text-sm text-gray-600 dark:text-gray-300">
                {t('home.features.taxonomy.description')}
              </p>
            </div>
          </div>
          <div class="flex flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 text-center">
            <div class="mx-auto flex size-12 items-center justify-center rounded-lg bg-primary/20 text-primary">
              <span class="material-symbols-outlined text-3xl">auto_awesome</span>
            </div>
            <div class="flex flex-col gap-2">
              <h2 class="text-lg font-bold text-gray-900 dark:text-white">{t('home.features.content.title')}</h2>
              <p class="text-sm text-gray-600 dark:text-gray-300">
                {t('home.features.content.description')}
              </p>
            </div>
          </div>
          <div class="flex flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 text-center">
            <div class="mx-auto flex size-12 items-center justify-center rounded-lg bg-primary/20 text-primary">
              <span class="material-symbols-outlined text-3xl">integration_instructions</span>
            </div>
            <div class="flex flex-col gap-2">
              <h2 class="text-lg font-bold text-gray-900 dark:text-white">{t('home.features.integration.title')}</h2>
              <p class="text-sm text-gray-600 dark:text-gray-300">
                {t('home.features.integration.description')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 sm:py-20">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
        <div class="flex flex-col items-center gap-2 rounded-xl bg-gray-100 dark:bg-gray-900 p-8 text-center">
          <p class="text-5xl font-black text-primary">{t('home.stats.conversion')}</p>
          <p class="text-base font-medium text-gray-600 dark:text-gray-300">{t('home.stats.conversionLabel')}</p>
        </div>
        <div class="flex flex-col items-center gap-2 rounded-xl bg-gray-100 dark:bg-gray-900 p-8 text-center">
          <p class="text-5xl font-black text-primary">{t('home.stats.time')}</p>
          <p class="text-base font-medium text-gray-600 dark:text-gray-300">{t('home.stats.timeLabel')}</p>
        </div>
        <div class="flex flex-col items-center gap-2 rounded-xl bg-gray-100 dark:bg-gray-900 p-8 text-center">
          <p class="text-5xl font-black text-primary">{t('home.stats.product')}</p>
          <p class="text-base font-medium text-gray-600 dark:text-gray-300">{t('home.stats.productLabel')}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20 sm:py-28">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="relative overflow-hidden flex flex-col items-center gap-8 rounded-2xl backdrop-blur-xl bg-primary/20 dark:bg-primary/30 border border-primary/30 p-10 text-center sm:p-16 shadow-2xl">
        <div class="absolute inset-0 opacity-30">
          <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-primary rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute bottom-1/4 right-1/4 w-40 h-40 bg-purple-500 rounded-full blur-3xl animate-pulse delay-1000"></div>
        </div>
        <h2 class="relative text-3xl font-black tracking-tight text-gray-900 dark:text-white sm:text-4xl md:text-5xl animate-[fadeInUp_0.8s_ease-out]">
          {t('home.cta.title')}
        </h2>
        <div class="relative">
          <Button href={`/${lang}/contact`}>{t('home.cta.button')}</Button>
        </div>
      </div>
    </div>
  </section>
</Layout>
