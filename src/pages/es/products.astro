---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n';

const lang = 'es';
const t = useTranslations(lang);
---

<Layout title={t('products.title')} description={t('products.description')}>
  <!-- HeroSection -->
  <div class="text-center py-20 sm:py-24 md:py-32">
    <div class="flex flex-col items-center gap-6">
      <div class="flex flex-col gap-4 text-center max-w-3xl px-4">
        <h1 class="text-4xl font-black leading-tight tracking-tighter text-gray-900 dark:text-white sm:text-5xl md:text-6xl">
          {t('products.hero.title')}
        </h1>
        <h2 class="text-lg font-normal text-gray-600 dark:text-gray-300">
          {t('products.hero.subtitle')}
        </h2>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="container mx-auto max-w-5xl px-4 pb-20">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="flex flex-1 flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 transition-transform hover:-translate-y-1">
        <div class="text-primary">
          <span class="material-symbols-outlined" style="font-size: 32px;">account_tree</span>
        </div>
        <div class="flex flex-col gap-2">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">{t('products.taxo.title')}</h2>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            {t('products.taxo.description')}
          </p>
        </div>
      </div>
      <div class="flex flex-1 flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 transition-transform hover:-translate-y-1">
        <div class="text-primary">
          <span class="material-symbols-outlined" style="font-size: 32px;">translate</span>
        </div>
        <div class="flex flex-col gap-2">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">{t('products.meta.title')}</h2>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            {t('products.meta.description')}
          </p>
        </div>
      </div>
      <div class="flex flex-1 flex-col gap-4 rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 transition-transform hover:-translate-y-1">
        <div class="text-primary">
          <span class="material-symbols-outlined" style="font-size: 32px;">sync_alt</span>
        </div>
        <div class="flex flex-col gap-2">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white">{t('products.flow.title')}</h2>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            {t('products.flow.description')}
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
